<div class='mt-4'>
    <h3><b>Khóa Học Miễn Phí</b></h3>
    <div class='list-pro mt-4 d-flex'>
        <div class='row card-deck'>
            {{#each courses}}
                <div class='card col-lg-3 col-md-6 px-0'>
                    <a href='/courses/{{this.slug}}' class='text-dark'>
                        <img src={{this.image}} class='card-img-top' alt='...' />
                        <div class='card-body'>
                            <h6 class='card-title'>{{this.name}}</h6>
                            {{! <a href='#' class='btn btn-primary'>Học ngay</a> }}
                            <h6 class='price-course'>Miễn phí</h6>
                        </div>
                    </a>
                </div>
            {{/each}}
        </div>
    </div>
</div>

<style>
    .card { background-color: #f7f7f7; border-color: #f7f7f7; border-radius: 1rem; overflow: hidden;} .card:hover { top:
    -0.2rem; box-shadow: rgba(0, 0, 0, 0.1) 0px 10px 15px -3px, rgba(0, 0, 0, 0.05) 0px 4px 6px -2px; } .price-course {
    color: #f15123; }
</style>